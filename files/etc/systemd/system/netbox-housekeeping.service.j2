[Unit]
Description=NetBox Housekeeping Service
Documentation=https://docs.netbox.dev/
After=network-online.target
Wants=network-online.target

[Service]
Type=simple

User={{ cfg.get('user') }}
Group={{ cfg.get('group') }}
WorkingDirectory={{ cfg.get('install_path') }}

ExecStart={{ cfg.get('install_path') }}/venv/bin/python {{ cfg.get('install_path') }}/netbox/manage.py housekeeping

[Install]
WantedBy=multi-user.target
